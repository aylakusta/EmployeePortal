@model IEnumerable<WebUI.Models.Transport>
@{
    ViewData["Title"] = "Transport Usage";
}
<div class="card shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">@ViewData["Title"]</h5>
    <a class="btn btn-primary btn-sm" asp-action="Create">New</a>
  </div>
  <div class="card-body">
    <table class="table table-striped table-bordered">
      <thead class="table-light"><tr><th>Date</th><th>Will Use?</th></tr></thead>
      <tbody>
        @foreach (var t in Model)
        {
          <tr>
            <td>@t.Date.ToString("dd.MM.yyyy")</td>
            <td>
              @if (t.WillUse) { <span class="badge bg-success">Yes</span> }
              else { <span class="badge bg-secondary">No</span> }
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
