@using Microsoft.AspNetCore.Identity
@using WebUI.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var userName = User?.Identity?.Name ?? "Admin";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css" rel="stylesheet" />


    <style>
        .ad-shell {
            display: flex;
            flex-direction: row-reverse;
            min-height: 100vh;
            background: #f8f9fa;
        }

        .ad-sidebar {
            width: 280px;
            background: #ffffff;
            border-left: 1px solid #e5e7eb;
            min-height: 100vh;
            position: sticky;
            top: 0;
            padding: 1rem;
        }

        .ad-sidebar .brand {
            font-weight: 700;
            font-size: 1.1rem;
        }

        .ad-nav a {
            display: block;
            padding: .5rem .75rem;
            border-radius: .5rem;
            text-decoration: none;
            color: #374151;
        }

        .ad-nav a:hover,
        .ad-nav a.active {
            background: #f1f5f9;
            color: #111827;
        }

        .ad-main {
            flex: 1 1 auto;
            padding: 1.25rem;
        }

        @@media (max-width: 992px) {
            .ad-sidebar {
                position: fixed;
                right: -320px;
                top: 0;
                height: 100vh;
                z-index: 1040;
                box-shadow: -10px 0 30px rgba(0, 0, 0, .08);
                transition: right .25s ease-in-out;
            }

            .ad-sidebar.open {
                right: 0;
            }

            .ad-toggle {
                position: fixed;
                right: 12px;
                bottom: 12px;
                z-index: 1050;
            }
        }

        .ad-user {
            font-size: .9rem;
            color: #6b7280;
        }

        .ad-section-title {
            font-weight: 600;
            font-size: .95rem;
            color: #6b7280;
            margin-top: .75rem;
            margin-bottom: .25rem;
        }

        .ad-divider {
            height: 1px;
            background: #e5e7eb;
            margin: .75rem 0 1rem 0;
        }
    </style>
</head>

<body>
    <div class="ad-shell">
        <aside id="adSidebar" class="ad-sidebar">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="brand">Admin Panel</div>
                <button id="adClose" type="button" class="btn btn-sm btn-outline-secondary d-lg-none">Kapat</button>
            </div>
            <div class="ad-user mb-2">
                @userName
            </div>
            <div class="ad-divider"></div>

            <div class="ad-section-title">Navigasyon</div>
            <nav class="ad-nav mb-3">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <a asp-area="Admin" asp-controller="Employees" asp-action="Index">Personeller</a>
                <a asp-area="Admin" asp-controller="Shifts" asp-action="Index">Vardiyalar</a>
                <a asp-area="Admin" asp-controller="Departments" asp-action="Index">Departmanlar</a>
                <a asp-area="Admin" asp-controller="Documents" asp-action="Index">Evraklar</a>
                <a asp-area="Admin" asp-controller="Announcements" asp-action="Index">Duyurular</a>
                <a asp-area="Admin" asp-controller="Menus" asp-action="Index">Yemek Menüsü</a>
                <a asp-area="Admin" asp-controller="Attendances" asp-action="Index">Katılım Durumu</a>
                <a asp-area="Admin" asp-controller="Transports" asp-action="Index">Servis Atamaları</a>
                <a asp-area="Admin" asp-controller="Transports" asp-action="Services">Servisler</a>
                <a asp-area="Admin" asp-controller="AttendanceReviews" asp-action="Index">Katılım Bildirimleri</a>
                <a asp-area="Admin" asp-controller="DocumentRequests" asp-action="Index">Evrak Talepleri</a>
                <a asp-area="Admin" asp-controller="Settings" asp-action="Index">Sistem Ayarları</a>
            </nav>

            <div class="ad-section-title">Hesap</div>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="mt-2">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-danger w-100">Çıkış Yap</button>
            </form>
        </aside>
        <div class="container">
            <main class="ad-main">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h2 class="m-0">@ViewData["Title"]</h2>
                    <button id="adToggle" type="button" class="btn btn-outline-secondary d-lg-none">Menü</button>
                </div>
                @RenderBody()
        </div>
        </main>
    </div>

    <environment include="Development">
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </environment>

    <script>
        (function () {
            const sidebar = document.getElementById('adSidebar');
            const toggleBtn = document.getElementById('adToggle');
            const closeBtn = document.getElementById('adClose');

            if (toggleBtn) {
                toggleBtn.addEventListener('click', function () {
                    sidebar.classList.add('open');
                });
            }
            if (closeBtn) {
                closeBtn.addEventListener('click', function () {
                    sidebar.classList.remove('open');
                });
            }

            document.addEventListener('click', function (e) {
                if (window.matchMedia("(max-width: 992px)").matches) {
                    if (!sidebar.contains(e.target) && !toggleBtn.contains(e.target)) {
                        sidebar.classList.remove('open');
                    }
                }
            }, true);
        })();
    </script>

    @RenderSection("Scripts", required: false)
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminNotificationsPartial.cshtml")

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const CLEAR_AFTER_MS = 4000;

            const clearPlaceholders = (root = document) => {
                root.querySelectorAll('input[placeholder], textarea[placeholder]').forEach(el => {
                    if (el.dataset.phCleared === '1') return;
                    const original = el.getAttribute('placeholder') || '';
                    setTimeout(() => {
                        // Orijinali istersen data-* ile saklıyoruz
                        el.setAttribute('data-original-placeholder', original);
                        el.removeAttribute('placeholder');
                        el.dataset.phCleared = '1';
                    }, CLEAR_AFTER_MS);
                });
            };

            // İlk yüklemede
            clearPlaceholders();

            // Sonradan DOM’a eklenenler (modal, partial, ajax vb.) için de uygula
            const obs = new MutationObserver(mutations => {
                for (const m of mutations) {
                    for (const n of m.addedNodes) {
                        if (n.nodeType === 1) { // ELEMENT_NODE
                            clearPlaceholders(n);
                        }
                    }
                }
            });
            obs.observe(document.body, { childList: true, subtree: true });
        });
    </script>

</body>

</html>