@model WebUI.Models.Announcement
@{
    ViewData["Title"] = "Duyuru Detayı";
     // kendi layout yoluna göre ayarla
}

<h2>Duyuru Detayı</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">İçerik</dt>
    <dd class="col-sm-10">@Html.Raw(Model.Body)</dd>

    <dt class="col-sm-2">Oluşturulma</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
<a asp-action="Index" class="btn btn-secondary">Geri</a>
