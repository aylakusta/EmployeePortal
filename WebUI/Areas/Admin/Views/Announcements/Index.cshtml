@model IEnumerable<WebUI.Models.Announcement>

@{
    ViewData["Title"] = "Duyurular";
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <h3></h3>
  <a class="btn btn-primary" asp-action="Create">+ Yeni Duyuru</a>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="q" value="@ViewBag.Q" class="form-control" placeholder="Ara...">
        <button class="btn btn-outline-secondary" type="submit">Ara</button>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Oluşturulma</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <!-- detay, düzenle, sil eklenebilir -->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
