@model IEnumerable<WebUI.Models.DocumentRequest>
@{
  Layout = null;
}
<!doctype html>
<html><head><meta charset="utf-8"><title>Evrak Talepleri</title>
<style>body{font-family:Arial; font-size:12px} table{width:100%; border-collapse:collapse} th,td{border:1px solid #ccc; padding:6px}</style>
</head><body onload="window.print()">
<h3>Evrak Talepleri</h3>
<table>
<thead><tr><th>Tarih</th><th>Tür</th><th>Kullanıcı</th><th>Başlangıç</th><th>Bitiş</th><th>Dosya</th><th>Durum</th></tr></thead>
<tbody>
@foreach (var r in Model)
{
  <tr>
    <td>@r.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
    <td>@r.Type</td>
    <td>@r.UserId</td>
    <td>@(r.StartDate?.ToString("dd.MM.yyyy") ?? "—")</td>
    <td>@(r.EndDate?.ToString("dd.MM.yyyy") ?? "—")</td>
    <td>@(r.UploadedFileName ?? "—")</td>
    <td>@(r.CompletedAt != null ? "Tamamlandı" : "Eksik")</td>
  </tr>
}
</tbody>
</table>
</body></html>