@model IEnumerable<WebUI.Models.Menu>
@{
    ViewData["Title"] = "Menus";
}

<h2 class="mb-3">Menus</h2>

<p>
    <a asp-area="Admin" asp-controller="Menus" asp-action="Create" class="btn btn-primary">Yeni Menü</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Url)</th>
            <th>@Html.DisplayNameFor(m => m.First().Order)</th>
            <th>Tarih</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @if (Model is not null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.Url))
                    {
                        <a href="@item.Url" target="_blank" rel="noopener">@item.Url</a>
                    }
                </td>
                <td>@item.Order</td>
                <td>@item.Date.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-end">
                    <a asp-area="Admin" asp-controller="Menus" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Menus" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">Sil</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
