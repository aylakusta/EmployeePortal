@model WebUI.Models.Document
@{
  
    ViewData["Title"] = "Upload Document";
}
<div class="card shadow-sm">
  <div class="card-header"><h5 class="mb-0">@ViewData["Title"]</h5></div>
  <div class="card-body">
    <form asp-action="Create" enctype="multipart/form-data" method="post">
      @Html.AntiForgeryToken()
      <div class="row g-3">
        <div class="col-md-8">
          <label class="form-label">File</label>
          <input type="file" name="file" class="form-control" />
        </div>
        <div class="col-md-4">
          <label class="form-label">Type</label>
          <input asp-for="FileType" class="form-control" placeholder="application/pdf" />
          <span asp-validation-for="FileType" class="text-danger"></span>
        </div>
      </div>
      <div class="mt-3">
        <button class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
      </div>
    </form>
  </div>
</div>

@section Scripts{ <partial name="_ValidationScriptsPartial" /> }