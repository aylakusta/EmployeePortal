@model WebUI.Models.Auth.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Parolamı Unuttum";
}

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-header bg-white">
        <h5 class="mb-0">Parola sıfırlama isteği</h5>
      </div>
      <div class="card-body">
        <form asp-action="ForgotPassword" method="post">
          @Html.AntiForgeryToken()
          <div class="mb-3">
            <label asp-for="UserIdentifier" class="form-label">Kullanıcı adı veya e-posta</label>
            <input asp-for="UserIdentifier" class="form-control" />
            <span asp-validation-for="UserIdentifier" class="text-danger"></span>
          </div>
          <p class="small text-muted">Sistemde kayıtlı e-posta adresine sıfırlama bağlantısı gönderilecektir.</p>
          <div class="d-grid">
            <button class="btn btn-primary">Bağlantı gönder</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
