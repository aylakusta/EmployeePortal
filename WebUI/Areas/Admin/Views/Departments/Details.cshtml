@model WebUI.Models.Department
@{
    ViewData["Title"] = "Departman Detayı";
}
<h3>Departman Detayı</h3>
<hr />
<dl class="row">
  <dt class="col-sm-3">Ad</dt>
  <dd class="col-sm-9">@Model.Name</dd>

  <dt class="col-sm-3">Açıklama</dt>
  <dd class="col-sm-9">@Model.Description</dd>
</dl>

<h5 class="mt-4">Çalışanlar</h5>
@if (Model.Employees == null || !Model.Employees.Any())
{
  <p class="text-muted">Bu departmanda çalışan yok.</p>
}
else
{
  <ul class="list-group">
    @foreach (var e in Model.Employees)
    {
      <li class="list-group-item d-flex justify-content-between">
        <span>@e.FullName</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-controller="Employees" asp-action="Details" asp-route-id="@e.Id">Görüntüle</a>
      </li>
    }
  </ul>
}

<div class="mt-3">
  <a class="btn btn-secondary" asp-action="Index">Geri</a>
  <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a>
</div>
